{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "lib",
        "strictNullChecks": false,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": [
        "src/components/**/*.ts",
        "src/**/*.tsx"
    ]
}